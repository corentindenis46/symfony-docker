{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier l'article</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="form-group mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.texte, 'Texte', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.texte, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.texte) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.publie, 'Publié', {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_widget(form.publie, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.publie) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.image, 'Image de l’article', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                </div>

                <button type="submit" class="btn btn-primary mt-3">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}